" フォント設定
set guifont=ubuntu\ mono\ 11
set guifontwide=Takaoゴシック\ 11
set linespace=0
" ツールバー非表示
set guioptions-=T
" メニューバー非表示
set guioptions-=m
" スクロールバー非表示
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
" タブページのラベルを常に表示
set showtabline=2
" 起動時のウィンドウサイズ
set lines=40
set columns=120
